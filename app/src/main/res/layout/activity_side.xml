<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/scrollPost"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/linlayFooter"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/sample5"
                android:scaleType="centerCrop"
                />
            <LinearLayout
                android:id="@+id/linlayUserSlit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/conlayUserInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardPfp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:cardCornerRadius="300dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        >
                        <ImageView
                            android:id="@+id/imgPfp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:srcCompat="@tools:sample/avatars"
                            />
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:id="@+id/textUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="예시"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cardPfp"
                        app:layout_constraintBottom_toTopOf="@id/textAdress"
                        />
                    <TextView
                        android:id="@+id/textAdress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="주소 예시"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textUsername"
                        app:layout_constraintStart_toEndOf="@id/cardPfp"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/conlayManner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/imgManner"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/lv1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/textTemp"
                        app:layout_constraintBottom_toTopOf="@id/textMannerTemp"
                        />
                    <TextView
                        android:id="@+id/textTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="33.3C"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#009688"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintTop_toTopOf="@id/imgManner"
                        app:layout_constraintEnd_toStartOf="@id/imgManner"
                        app:layout_constraintBottom_toBottomOf="@id/imgManner"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                    <TextView
                        android:id="@+id/textMannerTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mannertemp"
                        android:textColor="#9A000000"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/imgManner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1DCDC"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_sellerInfo" />

            <LinearLayout
                android:id="@+id/linlayText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                >
                <TextView
                    android:id="@+id/textPostTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="예시 제목"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/textPostBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ahuslfaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaajosidjfaisdjfoaijsdfjalskdjfkas"
                    android:textSize="20dp"
                    android:layout_marginTop="16dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linlayPriceAndInteract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/navigate_before"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <LinearLayout
        android:id="@+id/linlayFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scrollPost"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        >
        <ImageView
            android:id="@+id/icLike"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/favorite"
            />
        <View
            android:id="@+id/viewDivider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E1DCDC"
            android:layout_marginHorizontal="20dp"
            />
        <TextView
            android:id="@+id/textPostPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1600원"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_box"
            android:text="채팅하기"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>